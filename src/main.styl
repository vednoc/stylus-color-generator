:root {
    for color in colors[0..1] {
        for tone in 0..5 {
            { '--%s-%s' % ((color) (tone)) }: color + '-' + tone
        }
    }
    for color in colors[1..length(colors)] {
        for tone in 0..9 {
            { '--%s-%s' % ((color) (tone)) }: color + '-' + tone
        }
    }
}


// {{{ Debug
.debug {
    max-width: 496px

    &::before {
        content: $dbg
        font-style: italic
    }
}

for i in 0..9 {
    .debug-{ i }::before {
        content: '' + prettyHSLA($inspect + '-' + i)
        font-family: monospace
        font-size: 1rem
    }
}

unless($showNumbers) {
    ul.colors li[class] {
        color: transparent !important
        text-shadow: none !important
        box-shadow: none !important
    }
}

